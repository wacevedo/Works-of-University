        <ComboBox Height="23" HorizontalAlignment="Left" Margin="116,41,0,0" Name="comboBox2" VerticalAlignment="Top" Width="122" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="213,209,0,0" Name="textBox3" VerticalAlignment="Top" Width="53" IsEnabled="False" />
